<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        <mapper namespace="by.luchesa.breakfast.dao.BreakfastMapper">
    <resultMap id="breakfast" type="by.luchesa.breakfast.datamodel.Breakfast">
        <id property="idBreakfas" column="id_breakfast"/>
        <result column="name_breakfast" property="nameBreakfast"/>
        <result column="price" property="price"/>
    </resultMap>

    <select id="getBreakfastId" parameterType="java.lang.Integer" resultType="by.luchesa.breakfast.datamodel.Breakfast">
        SELECT
            id_breakfast,
            name_breakfast,
            price
        FROM
            breakfast
        WHERE
            id_breakfas=#{idBreakfast};
    </select>


    <select id="getAllBreakfast">
        SELECT
            id_breakfast,
            name_breakfast,
            price
        FROM
            breakfast;
    </select>


    <insert id="addNewBreakfast">
        INSERT
            INTO "breakfast" (name_breakfast, price)
        VALUES
            (#{breakfast.nameBreakfast}, #{breakfast.price});
    </insert>


    <delete id="deleteBreakfast">
        DELETE FROM "breakfast"
        WHERE id_breakfast=#{breakfast.idBreakfast};
    </delete>


    <update id="setNewPrice">
        UPDATE "breakfast"
        SET
            price=#{breakfast.price}
        WHERE
            id_breakfast=#{breakfast.idBreakfast};
    </update>



</mapper>