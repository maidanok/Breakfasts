<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="by.luchesa.breakfast.dao.UserRolesMapper">
    <resultMap id="userroles" type="by.luchesa.breakfast.datamodel.UserRoles">
        <id property="primaryKey" column="user_role_id"/>
        <result column="role" property="role"/>
    </resultMap>

    <select id="getAll" resultMap="userroles">
        SELECT
            *
        FROM
            user_roles
        ORDER BY user_role_id
    </select>

    <select id="getByPrimaryKey" resultMap="userroles" parameterType="java.lang.Integer">
        SELECT
        *
        FROM
            user_roles
        WHERE user_role_id=#{primaryKey};
    </select>

    <insert id="create">
        INSERT INTO user_roles(role)
        VALUES (#{role});
    </insert>

    <update id="update">
        UPDATE user_roles
        SET role=#{role}
        WHERE user_role_id=#{primaryKey};
    </update>

    <delete id="delete">
        DELETE FROM user_roles
        WHERE user_role_id=#{primaryKey};
    </delete>


</mapper>