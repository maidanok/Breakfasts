<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="by.luchesa.breakfast.dao.BreakfastMapper">
    <resultMap id="breakfast" type="by.luchesa.breakfast.datamodel.Breakfast">
        <id property="idBreakfast" column="id_breakfast"/>
        <result column="name_breakfast" property="nameBreakfast"/>
        <result column="price" property="price"/>
    </resultMap>

    <select id="getBreakfastId" parameterType="java.lang.Integer" resultMap="breakfast">
        SELECT
            *
        FROM
            breakfast
        WHERE
            id_breakfast=#{idBreakfast};
    </select>


    <select id="getAllBreakfast" resultMap="breakfast">
        SELECT
            *
        FROM
            breakfast;
    </select>


    <insert id="insertNewBreakfast">
        INSERT
            INTO public.breakfast (name_breakfast, price)
        VALUES
            (#{nameBreakfast}, #{price});
    </insert>


    <delete id="deleteBreakfast" parameterType="java.lang.Integer">
        DELETE
        FROM "breakfast"
        WHERE id_breakfast=#{idBreakfast};
    </delete>


    <update id="updateBreakfast">
        UPDATE "breakfast"
        SET
            name_breakfast=#{nameBreakfast},
            price=#{price}
        WHERE
            id_breakfast=#{idBreakfast};
    </update>



</mapper>